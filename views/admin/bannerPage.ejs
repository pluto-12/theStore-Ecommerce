<%- include('adminHeader')%>

<link rel="stylesheet" href="/static/adminProductPage.css">
<div
  class="d-flex"
  style="width: 80%; margin-left: 25px; justify-content: space-between"
>
  <h3 class="mb-5 mt-5">Banners</h3>
</div>
<div class="d-flex justify-content-center" id="navbarNav">
    <form class="input-group" style="max-width: 500px; margin-right: 30px">
      <input
        type="search"
        class="form-control rounded"
        placeholder="Search"
        aria-label="Search"
        aria-describedby="search-addon"
      />
      <span class="input-group-text border-0" id="search-addon">
        <span class="material-icons">search</span>
      </span>
    </form>
    <a href="/admin/newbanner" class="btn btn-secondary ml-2">Add New Banner</a>
</div>
<div class="row" style="margin: 20px;">
    <div class="col-md-12">
        <table class="table table-success table-stripped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% bannerList.forEach((banner) => { %>
                    <tr>
                        <td><%= banner.bannerName %></td>
                        <% if(banner.isActive) { %>
                            <td><a class="btn btn-outline-danger" href="/admin/changestatus?id=<%= banner._id %>">Disable</a></td>
                        <% } else  { %>
                            <td><a class="btn btn-outline-success" href="/admin/changestatus?id=<%= banner._id %>">Activate</a></td>
                        <% } %>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>