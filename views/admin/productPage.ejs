<%- include('adminHeader') %>

<link rel="stylesheet" href="/static/adminProductPage.css">
<div
  class="d-flex"
  style="width: 80%; margin-left: 25px; justify-content: space-between"
>
  <h3 class="mb-5 mt-5">All Products</h3>
  <!-- <a class="btn btn-outline-primary my-3 ml-5" style="height: 40px; width: 200px; margin-top: 45px;" href="/admin/adduser" >Add New User</a> -->
</div>
<div class="d-flex justify-content-center" id="navbarNav">
    <form class="input-group" style="max-width: 500px; margin-right: 30px">
      <input
        type="search"
        class="form-control rounded"
        placeholder="Search"
        aria-label="Search"
        aria-describedby="search-addon"
      />
      <span class="input-group-text border-0" id="search-addon">
        <span class="material-icons">search</span>
      </span>
    </form>
    <a href="/admin/newproduct" class="btn btn-secondary ml-2">Add Product</a>
    <!-- <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addCategoryModal">
      Add New Category
    </button> -->
</div>

<div class="row" style="margin: 20px">
    <div class="col-md-12">
      <table class="table table-success table-stripped table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Stock Remaining</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((product) => { %>
          <tr>
            <td><%= product.productName %></td>
            <td><%= product.productPrice %></td>
            <td><%= product.productStock %></td>
            <td class="description-cell"><%= product.productDescription %></td>
            <td><%= product.productCategory %></td>
            <td>
              <a
                class="btn btn-outline-primary"
                href="/admin/editproduct?id=<%= product._id %>"
                >Edit</a
              >
              <a
                class="btn btn-outline-danger"
                href="/admin/deleteproduct?id=<%= product._id %>"
                >Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
</div>
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"
></script>

