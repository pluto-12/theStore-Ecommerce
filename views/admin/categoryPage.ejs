<div class="row" style="margin: 20px">
  <div class="col-md-12">
    <table class="table table-success table-stripped table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((category) => { %>
        <tr>
          <td><%= category.categoryName %></td>
          <td class="description-cell"><%= category.categoryDescription %></td>
          <!-- <td><%= category.categoryImage %></td> -->
          <td>
            <a
              class="btn btn-outline-primary"
              href="/admin/editcategory?id=<%= category._id %>"
              >Edit</a
            >
            <a
              class="btn btn-outline-danger"
              href="/admin/deletecategory?id=<%= category._id %>"
              >Delete</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
