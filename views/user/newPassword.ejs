<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Login</title>
</head>
<body>
    <!-- Section: Design Block -->
    <section class="">
    <!-- Jumbotron -->
        <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="my-5 display-3 fw-bold ls-tight">
                Shop from the Best <br />
                <span class="text-primary">The Store</span>
                </h1>
            </div>
    
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card">
                <div class="card-body py-5 px-md-5">
                    <form  class="form-control" method="post" action="/updatepassword" onsubmit="return validateAll()">
                        <h2>Signup</h2>
                        <% if (locals.errorMessage) { %>
                            <div class="alert alert-danger">
                              <strong><%= errorMessage %> </strong>
                            </div>
                        <% } %> 
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <span id="passwordError" style="color: red"></span>
                            <input type="password" id="form3Example4" name="userPassword" class="form-control" onblur="validatePassword()"/>
                            <label class="form-label" for="form3Example4">Password</label>
                        </div>
                        <div class="form-outline mb-4">
                          <span id="confirmpasswordError" style="color: red"></span>
                          <input type="password" id="form3Example4" name="userConfirmPassword" class="form-control" onblur="validateconfirmpassword()"/>
                          <label class="form-label" for="form3Example4">Confirm Password</label>
                      </div>
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">
                            Register
                        </button>
                    </form>
                    <div class="text-center">
                      <p>Already a User ? </p>
                      <a href="/login">Login Here</a>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
        <!-- Jumbotron -->
    </section>
  <!-- Section: Design Block -->


  <script>
    

  function validatePassword () {
    let password = document.getElementsByName('userPassword')[0].value
    if(password === "") {
      document.getElementById('passwordError').innerHTML = "password cannot be empty"
      return false
    } else {
      return true
    }
  }

  function validateconfirmpassword () {
    let password = document.getElementsByName('userPassword')[0].value
    let cpassword = document.getElementsByName('userConfirmPassword')[0].value
    if(password == cpassword) {
      return true
    } else {
      document.getElementById('confirmpasswordError').innerHTML = "password doesnt match"
      return false
    }
  }

  function validateAll () {
    if(validatePassword() && validateconfirmpassword()) {
      return true
    } else {
      return false
    }
  }
  </script>
    
<%- include('userFooter') %>