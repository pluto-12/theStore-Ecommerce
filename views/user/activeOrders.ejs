<%- include('userHeader') %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f8f9fa;
        /* Chrome 10-25, Safari 5.1-6 */
        background: #f8f9fa;
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: #f8f9fa
    }
</style>

<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <% if(locals.activeOrders) { %>
                            <h5 class="mb-0 text-success">Active Orders</h5>
                        <%} else { %>
                            <h5 class="mb-0 text-danger"> No Active Orders</h5>
                        <% } %>
                    </div>
                    <% if(locals.activeOrders) { %>
                        <% activeOrders.forEach((order) =>{ %>
                            <div class="card m-4">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="row">
                                            <!-- <div class="col-md-3">
                                                <p>Order Placed On:</p>
                                                <p><%= order.dateOfPurchase %></p>
                                            </div> -->
                                            <div class="col-md-3">
                                                <p>Expected Delivery:</p>
                                                <p><%= order.dateOfDelivery %></p>
                                            </div>
                                            <div class="col-md-2">
                                                <p>Status:</p>
                                                <p><%= order.orderStatus %></p>
                                            </div>
                                            <div class="col-md-2">
                                                <p>Price:</p>
                                                <p><span>&#8377;</span><%= order.totalAmount %></p>
                                            </div>
                                            <div class="col-md-2">
                                                <p>Order ID:</p>
                                                <p><%= order.orderId %></p>
                                            </div>
                                            <div class="col-md-2">
                                                <a class="btn btn-outline-danger" href="/cancelitem?orderId=<%=order._id%>">Cancel Item</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <% order.purchaseItems.forEach ((item) => { %>
                                        <div class="row">
                                            <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                                    <img src="/assets/productImages/<%=item.itemImage%>"
                                                    class="w-75"/>
                                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                                </div>
                                            </div>
                                            <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                <h4><strong><%= item.itemName %></strong></h4>
                                                <p class="card-text">Quantity: <%= item.itemQuantity %> </p>
                                                <p class="act-price">
                                                    <span>&#8377;</span><%=item.itemPrice %>
                                                </p>
                                            </div>
                                            <!-- <div class="col-lg-4 col-md-6 mb-4 mb-lg-0" >
                                                <a class="btn btn-outline-danger" href="/cancelitem?orderId=<%=order._id%>&itemId=<%=item.itemId%>">Cancel Item</a>
                                            </div> -->
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        <% }) %>
                    <%}%>
                    
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('userFooter') %>