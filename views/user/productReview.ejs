<%- include('userHeader') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mb-3 w-75 mx-auto">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/assets/productImages/<%=product[0].productImages[0]%>" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=product[0].productName%></h5>
                            <div class="card">
                                <div class="card-body">
                                    <form action="/addrating" method="post">
                                        <div class="form-group">
                                            <input type="text" name="id" value="<%=product[0]._id%>" hidden>
                                            <label for="rating">Rating (out of 5)</label>
                                            <select class="form-control" id="rating" name="rating">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="review">Review</label>
                                            <textarea class="form-control" id="review" name="review" rows="4"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('userFooter')%>
